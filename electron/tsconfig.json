{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../dist/electron",
    "baseUrl": "..",
    "paths": {
      "@electron/*": ["./electron/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*", "../src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
