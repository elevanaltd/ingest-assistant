{
  "name": "ingest-assistant",
  "version": "2.2.0",
  "description": "AI-powered media file ingestion and metadata assistant with keyboard shortcuts, virtual scrolling, and enhanced security",
  "main": "dist/electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json && electron .",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "package": "electron-builder",
    "postinstall": "electron-rebuild -f -w keytar",
    "rebuild": "electron-rebuild -f -w keytar",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ai-structured": "tsc -p electron/tsconfig.json && node dist/electron/electron/scripts/test-structured-analysis.js",
    "typecheck": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "lint": "eslint ."
  },
  "keywords": [
    "electron",
    "media",
    "ai",
    "metadata"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/keytar": "^4.4.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@types/react-window": "^1.8.8",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "js-yaml": "^4.1.0",
    "keytar": "^7.9.0",
    "openai": "^4.24.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "zod": "^3.25.76"
  },
  "build": {
    "appId": "com.ingest-assistant",
    "productName": "Ingest Assistant",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "deb"
      ],
      "synopsis": "AI-powered media file ingestion and metadata assistant",
      "description": "Electron desktop application for batch processing media files with AI analysis and XMP metadata embedding."
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
